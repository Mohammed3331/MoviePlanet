<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent"


    android:weightSum="4"
    android:id="@+id/layout_trailer1"
    android:layout_margin="5dp"
   >
    <LinearLayout
        android:id="@+id/trailer1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#fff">

        <ImageButton
            android:id="@+id/list_item_trailer_button1"

            android:layout_width="0dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@drawable/you_tube_play"
            android:layout_weight="1.5"

            />
        <TextView
            android:id="@+id/list_item_trailer_textBox"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:textAlignment="center"
            android:gravity="center_horizontal"

            android:paddingTop="50dp"
            android:layout_weight="2.5"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"/>
    </LinearLayout>

   <!-- <Button
        android:id="@+id/list_item_trailer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />-->
</LinearLayout>
