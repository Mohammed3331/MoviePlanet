<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State when a row is being pressed, but hasn't yet been activated (finger down) -->
    <item android:state_hovered="true">
        <ripple android:color="@color/MoviePlanet_light_blue" />
    </item>

    <!-- When the view is "activated".  In SINGLE_CHOICE_MODE, it flags the active row
      of a ListView -->
    <item android:state_checked="true"
        android:drawable="@drawable/abc_btn_rating_star_on_mtrl_alpha" />

    <!-- Default, "just hangin' out" state. -->
    <item android:drawable="@drawable/abc_btn_rating_star_off_mtrl_alpha" />
</selector>